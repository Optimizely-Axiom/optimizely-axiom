{
  "name": "optiaxiom",
  "packageManager": "pnpm@9.12.3",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm -F globals... -F react... -F web-components... build",
    "bundle-size": "oas-bundle-size",
    "design-tokens": "oas-design-tokens",
    "dev": "pnpm run --parallel -F !web-components dev",
    "lint": "_m(){ concurrently --raw \"oas-lint $@\" \"pnpm run -r --no-bail --parallel --reporter-hide-prefix lint $@\"; } && _m",
    "release": "pnpm build && changeset publish",
    "test": "pnpm -F react test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@optiaxiom/shared": "workspace:^",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/pluginutils": "^5.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vanilla-extract/rollup-plugin": "^1.3.10",
    "@vanilla-extract/vite-plugin": "^4.0.17",
    "@vitest/browser": "^2.1.4",
    "concurrently": "^9.0.1",
    "esbuild": "0.17.6",
    "happy-dom": "^15.7.4",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.24.3",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "wait-on": "^8.0.1",
    "webdriverio": "^9.2.6"
  },
  "pnpm": {
    "patchedDependencies": {
      "react-docgen-typescript": "patches/react-docgen-typescript.patch"
    }
  }
}
