{
  "name": "optiaxiom",
  "packageManager": "pnpm@9.6.0",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm -F react... -F web-components... build",
    "bundle-size": "oas-bundle-size",
    "dev": "pnpm run --parallel -F !web-components dev",
    "lint": "_m(){ concurrently --raw \"oas-lint $@\" \"pnpm run -r --no-bail --parallel --reporter-hide-prefix lint $@\"; } && _m",
    "release": "pnpm build && changeset publish",
    "test": "pnpm -F react test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@optiaxiom/shared": "workspace:^",
    "@rollup/pluginutils": "^5.1.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/rollup-plugin": "^1.3.7",
    "@vanilla-extract/vite-plugin": "^4.0.13",
    "concurrently": "^8.2.2",
    "esbuild": "0.17.6",
    "happy-dom": "^14.12.3",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.19.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4",
    "wait-on": "^7.2.0"
  }
}
