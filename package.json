    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.2",
    "@vanilla-extract/rollup-plugin": "^1.3.11",
    "@vanilla-extract/vite-plugin": "^4.0.18",
    "@vitest/browser": "2.1.4",
    "concurrently": "^9.1.0",
    "esbuild": "0.17.6",
    "happy-dom": "^15.11.7",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
