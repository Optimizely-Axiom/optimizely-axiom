{
  "name": "optiaxiom",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm -F globals... -F react... -F web-components... build",
